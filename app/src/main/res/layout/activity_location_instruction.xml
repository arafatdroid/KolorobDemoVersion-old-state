<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="demo.kolorob.kolorobdemoversion.activity.LocationInstructionActivity"
    android:background="@drawable/torn_paper_big">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="এর পরের পাতায় Yes এ চাপ দিতে হবে"
        android:id="@+id/textView3"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textIsSelectable="false"
        android:paddingLeft="30dp"
        android:paddingTop="20dp"
        android:paddingRight="30dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_btn_ins_yes"
        android:src="@drawable/button_ha_small"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="বুঝতে পেরেছেন?"
        android:id="@+id/textView4"
        android:textColor="#000000"
        android:textSize="30dp"
        android:padding="10dp"
        android:textIsSelectable="false"
        android:layout_above="@+id/img_btn_ins_yes"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/textView4"
        android:background="@drawable/location_notification"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"></LinearLayout>
</RelativeLayout>
