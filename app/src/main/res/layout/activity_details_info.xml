<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="demo.kolorob.kolorobdemoversion.activity.DetailsInfoActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/detailed_info_panel_top"
        android:gravity="center_vertical|right"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="বন্ধ করুন"
            android:id="@+id/tv_close"
            android:textColor="#000000"
            android:textSize="18sp"
            android:focusable="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_close"
            android:src="@drawable/close_button"
            android:paddingRight="20dp"
            android:focusable="true" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_above="@+id/linearLayout4"
        android:layout_alignStart="@+id/linearLayout2"
        android:background="@drawable/detailed_info_panel_body"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/scrollView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="স্কুল এর নাম"
                android:id="@+id/tv_header"
                android:textColor="#000000"
                android:textSize="25sp"
                android:paddingLeft="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:padding="5dp"
                android:layout_marginLeft="5dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:layout_alignParentStart="true"
                android:src="@drawable/green_line_horizontal"
                android:layout_below="@+id/tv_header"
                android:layout_alignParentLeft="true"
                android:padding="5dp"
                android:layout_alignRight="@+id/imageView4"
                android:layout_alignEnd="@+id/imageView4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ঠিকানা :"
                android:id="@+id/tv_item_location"
                android:textColor="@color/small_window_text_color"
                android:textSize="20sp"
                android:layout_below="@+id/imageView2"
                android:layout_alignParentLeft="true"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ধরন :"
                android:id="@+id/tv_item_type"
                android:textColor="@color/small_window_text_color"
                android:textSize="20sp"
                android:layout_below="@+id/tv_item_location"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="যোগাযোগের উপায়  :"
                android:id="@+id/tv_item_contact"
                android:textColor="@color/small_window_text_color"
                android:textSize="20sp"
                android:layout_below="@+id/tv_item_type"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="অন্যান্য তথ্য"
                android:id="@+id/textView12"
                android:textColor="#000000"
                android:textSize="25sp"
                android:paddingLeft="10dp"
                android:layout_below="@+id/tv_item_contact"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:padding="5dp"
                android:layout_marginLeft="5dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView4"
                android:layout_alignParentStart="true"
                android:src="@drawable/green_line_horizontal"
                android:layout_below="@+id/textView12"
                android:layout_alignParentLeft="true"
                android:padding="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="আরো তথ্য"
                android:id="@+id/textView13"
                android:textColor="#000000"
                android:textSize="25sp"
                android:paddingLeft="10dp"
                android:padding="5dp"
                android:layout_below="@+id/tv_transport_facility"
                android:layout_alignLeft="@+id/textView12"
                android:layout_alignStart="@+id/textView12" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5"
                android:layout_alignParentStart="true"
                android:src="@drawable/green_line_horizontal"
                android:layout_below="@+id/textView13"
                android:layout_alignParentLeft="true"
                android:padding="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Total Students :"
                android:id="@+id/tv_total_students"
                android:textColor="@color/small_window_text_color"
                android:textSize="20sp"
                android:layout_below="@+id/imageView4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Total Classes"
                android:id="@+id/tv_total_class"
                android:textColor="@color/small_window_text_color"
                android:textSize="20sp"
                android:layout_below="@+id/tv_total_students"
                android:layout_alignParentLeft="true"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Total Teachers :"
                android:id="@+id/tv_total_teachers"
                android:textColor="@color/small_window_text_color"
                android:textSize="20sp"
                android:layout_below="@+id/tv_total_class"
                android:layout_alignParentLeft="true"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Hostel Facility :"
                android:id="@+id/tv_hostel_fac"
                android:textColor="@color/small_window_text_color"
                android:textSize="20sp"
                android:layout_below="@+id/tv_total_teachers"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Playground :"
                android:id="@+id/tv_playground"
                android:textColor="@color/small_window_text_color"
                android:textSize="20sp"
                android:layout_below="@+id/tv_hostel_fac"
                android:layout_alignParentLeft="true"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Transport Facility :"
                android:id="@+id/tv_transport_facility"
                android:textColor="@color/small_window_text_color"
                android:textSize="20sp"
                android:layout_below="@+id/tv_playground"
                android:layout_alignParentLeft="true"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Email : "
                android:id="@+id/tv_email"
                android:textColor="@color/small_window_text_color"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="4dp"
                android:layout_below="@+id/imageView5"
                android:layout_alignLeft="@+id/tv_website"
                android:layout_alignStart="@+id/tv_website" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Website : "
                android:id="@+id/tv_website"
                android:textColor="@color/small_window_text_color"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="4dp"
                android:layout_below="@+id/tv_email"
                android:layout_alignLeft="@+id/tv_fb"
                android:layout_alignStart="@+id/tv_fb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Facebook Link : "
                android:id="@+id/tv_fb"
                android:textColor="@color/small_window_text_color"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="4dp"

                android:layout_below="@+id/tv_website"
                android:layout_alignLeft="@+id/textView13" />

        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/detailed_info_panel_bottom"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout4"></LinearLayout>

</RelativeLayout>
